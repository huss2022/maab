        function createFloatingElements() {
            const symbols = ['ğŸ“–', 'â­', 'âœ¨', 'ğŸŒ™', 'ğŸ•‹'];
            const floatingElementsContainer = document.querySelector('.floating-elements');
            
            setInterval(() => {
                if (floatingElementsContainer) {
                    const symbol = symbols[Math.floor(Math.random() * symbols.length)];
                    const size = Math.random() * 1 + 0.5; // 0.5 to 1.5rem
                    const x = Math.random() * 100; // 0 to 100%
                    const y = Math.random() * 100; // 0 to 100%
                    const delay = Math.random() * 5; // 0 to 5s delay
                    const duration = Math.random() * 10 + 5; // 5 to 15s duration
                    
                    const element = document.createElement('div');
                    element.classList.add('floating-element');
                    element.textContent = symbol;
                    element.style.fontSize = `${size}rem`;
                    element.style.left = `${x}vw`;
                    element.style.top = `${y}vh`;
                    element.style.animationDelay = `${delay}s`;
                    element.style.animationDuration = `${duration}s`;
                    
                    floatingElementsContainer.appendChild(element);
                    
                    setTimeout(() => {
                        if (element.parentNode) {
                            element.remove();
                        }
                    }, 10000);
                }
            }, 3000);
        }
        
